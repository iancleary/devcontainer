alias ga='git add'
alias gc='git commit -m'
alias gs='git status'
alias gp='git push origin'
alias gl='git pull origin'
alias gcm='git checkout main && git pull origin main && git branch -D '
alias gd='git diff'
alias gds='git diff --staged'
alias gr='git reset HEAD --hard'
alias ls='ls -F'
alias ll='ls -lh'
alias hg='history|grep'  # search bash history, I swapped the letters for github-cli compatibility
alias left='ls -t -1'  # most recently edited files